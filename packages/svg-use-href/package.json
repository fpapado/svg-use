{
  "name": "svg-use-href",
  "version": "0.3.0",
  "description": "Tools and bundler plugins for loading SVG images via use[href], for use in components.",
  "license": "MIT",
  "author": "Fotis Papadogeorgopoulos <fotis@fpapado.com> (https://fotis.xyz)",
  "repository": {
    "type": "git",
    "url": "https://github.com/fpapado/svg-use-href.git",
    "directory": "packages/svg-use-href"
  },
  "bugs": {
    "url": "https://github.com/fpapado/svg-use-href/issues"
  },
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    "./env.rollup": "./env.rollup.d.ts",
    "./env.webpack": "./env.webpack.d.ts",
    "./webpack": {
      "import": {
        "types": "./dist/esm/webpack/index.d.ts",
        "default": "./dist/esm/webpack/index.js"
      },
      "require": {
        "types": "./dist/commonjs/webpack/index.d.ts",
        "default": "./dist/commonjs/webpack/index.js"
      }
    },
    "./rollup": {
      "import": {
        "types": "./dist/esm/rollup/index.d.ts",
        "default": "./dist/esm/rollup/index.js"
      },
      "require": {
        "types": "./dist/commonjs/rollup/index.d.ts",
        "default": "./dist/commonjs/rollup/index.js"
      }
    },
    "./react": {
      "import": {
        "types": "./dist/esm/react/index.d.ts",
        "default": "./dist/esm/react/index.js"
      },
      "require": {
        "types": "./dist/commonjs/react/index.d.ts",
        "default": "./dist/commonjs/react/index.js"
      }
    }
  },
  "files": [
    "dist/**/*",
    "env.rollup.d.ts",
    "env.webpack.d.ts"
  ],
  "scripts": {
    "build": "pnpm build:lib",
    "build:lib": "tshy",
    "build:lib:watch": "tshy --watch",
    "check-types": "tsc --noEmit",
    "check-types:watch": "tsc --noEmit --watch",
    "dev": "npm-run-all --parallel build:lib:watch test",
    "lint": "npm-run-all \"lint:*\"",
    "lint:prettier": "pnpm prettier --check .",
    "lint:scripts": "eslint src --report-unused-disable-directives --max-warnings 0",
    "prepublish": "publint && attw --config-path ./.attw.json --pack",
    "prepublishOnly": "pnpm install && pnpm build",
    "test": "vitest"
  },
  "dependencies": {
    "@rollup/pluginutils": "^5.1.0",
    "loader-utils": "^3.3.1",
    "rollup": "4.20.0",
    "svgo": "^3.3.2",
    "unist-util-visit": "^5.0.0",
    "xast-util-from-xml": "^4.0.0",
    "xast-util-to-xml": "^4.0.0"
  },
  "peerDependencies": {
    "react": "^18"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@testing-library/dom": "10.4.0",
    "@testing-library/react": "16.0.0",
    "@types/loader-utils": "2.0.6",
    "@types/node": "20.14.14",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@types/webpack": "^5.28.5",
    "dedent": "^1.5.1",
    "jest": "29.7.0",
    "memfs": "^4.8.0",
    "webpack": "5.93.0"
  },
  "keywords": [
    "loader",
    "performance",
    "plugin",
    "rollup",
    "svg",
    "vite",
    "webpack"
  ],
  "tshy": {
    "exclude": [
      "src/**/*.spec.*",
      "src/**/test/"
    ],
    "exports": {
      "./package.json": "./package.json",
      "./env.rollup": "./env.rollup.d.ts",
      "./env.webpack": "./env.webpack.d.ts",
      "./webpack": "./src/webpack/index.ts",
      "./rollup": "./src/rollup/index.ts",
      "./react": "./src/react/index.ts"
    }
  }
}
