{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",

    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react-jsx",

    "declaration": true,
    // tshy persists its build cache, so this allows us to save some time
    // locally
    "incremental": true
  },
  "include": [
    "src",
    // required for module augmentation of `expect`
    "vitest-setup.ts",
    "vitest.config.ts"
  ]
}
