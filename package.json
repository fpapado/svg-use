  },
  "bugs": {
    "url": "https://github.com/fpapado/svg-use-href/issues"
  },
  "type": "module",
  "scripts": {
    "build": "pnpm --recursive run build",
    "check-types": "pnpm --recursive run check-types",
    "preinstall": "npx only-allow pnpm",
    "lint": "pnpm --recursive lint",
    "prepare": "husky",
