{
  "private": true,
  "name": "@svg-use/monorepo-root",
  "version": "0.1.0",
  "description": "Tools and bundler plugins for loading SVG images via use[href], for use in components.",
  "license": "MIT",
  "author": "Fotis Papadogeorgopoulos <fotis@fpapado.com> (https://fotis.xyz)",
  "repository": {
    "type": "git",
